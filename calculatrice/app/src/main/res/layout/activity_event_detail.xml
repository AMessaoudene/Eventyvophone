<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <ImageView
                android:id="@+id/imgEvent"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="12dp"
                android:background="#DDDDDD"/>

            <TextView
                android:id="@+id/tvStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvMeetLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meet Link"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvOnline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Online/Offline"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvFree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free/Paid"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="16sp"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/tvParticipationStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Participation status"
                android:textSize="16sp"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/btnParticipate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Participate"
                android:layout_marginTop="12dp"
                android:backgroundTint="#009688"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/btnShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share Event"
                android:layout_marginTop="10dp"
                android:backgroundTint="#FF9800"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/btnAnalytics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Analytics"
                android:layout_marginTop="10dp"
                android:backgroundTint="#9C27B0"
                android:textColor="#FFFFFF"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnManageParticipation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage participation"
                android:layout_marginTop="10dp"
                android:backgroundTint="#607D8B"
                android:textColor="#FFFFFF"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnScanQr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scan QR Code"
                android:layout_marginTop="10dp"
                android:backgroundTint="#673AB7"
                android:textColor="#FFFFFF"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnEditEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Event"
                android:layout_marginTop="16dp"
                android:backgroundTint="#3F51B5"
                android:textColor="#FFFFFF"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnDeleteEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Event"
                android:layout_marginTop="8dp"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF"
                android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/menu_bottom" />
</LinearLayout>
